# Moonlander Test Configuration
# Copy this file to .env and fill in your values

# Private Key (REQUIRED)
# Your Cronos wallet private key for signing transactions
# IMPORTANT: Keep this secret! Never commit .env to git
# This is used for:
#   - test-moonlander-cli.js (testing Moonlander integration)
#   - mint-testnet-tokens.js (minting testnet tokens)
MOONLANDER_PRIVATE_KEY=...

# Network Selection (Optional)
# Set to 'false' for mainnet, leave as 'true' or omit for testnet
USE_TESTNET=true

# Contract Addresses (Optional - defaults provided for TESTNET)
# Diamond contract address (main trading contract)
# Testnet: 0xf8Ac0F8A18c3f63fBd547b4D166945EB4b3D833A
# Mainnet: 0xE6F6351fb66f3a35313fEEFF9116698665FBEeC9
MOONLANDER_DIAMOND_ADDRESS=0xf8Ac0F8A18c3f63fBd547b4D166945EB4b3D833A

# USDC token address on Cronos
# Testnet USDC: 0x01A15d3504446928EB56dbc58D5dDA120D502Be4
# Mainnet USDC: 0xc21223249CA28397B4B6541dfFaEcC539BfF0c59
MOONLANDER_USDC_ADDRESS=0x01A15d3504446928EB56dbc58D5dDA120D502Be4

# Test Parameters (Optional)
# Trading pair to test price fetching
TEST_PAIR=BTC/USD

# Amount of USDC to approve in approval test
APPROVAL_AMOUNT=100
